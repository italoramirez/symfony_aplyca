{% extends 'base.html.twig' %}
<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="">Delete</button>
</form>
