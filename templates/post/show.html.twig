{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ post.titulo }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ post.fecha ? post.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ post.texto }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ post.imagen }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
